{
  "version": 2,
  "functions": {
    "api/*.php": {
      "runtime": "php@8.2"
    }
  },
  "rewrites": [
    {
      "source": "/assets/(.*)",
      "destination": "/public/assets/$1"
    },
    {
      "source": "/thank-you-new.html",
      "destination": "/public/thank-you-new.html"
    },
    {
      "source": "/thank-you.html",
      "destination": "/public/thank-you.html"
    },
    {
      "source": "/contact.php",
      "destination": "/api/contact.php"
    },
    {
      "source": "/(.*\\.(html|css|js|jpg|jpeg|png|gif|svg|ico|woff|woff2|ttf|eot))",
      "destination": "/public/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.php"
    }
  ]
}

